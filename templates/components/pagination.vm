## Controles de paginação
##
#if($response.response.get('grouped'))
    <span>
        <span class="results-found">
            $response.response.get('grouped').size() grupo(s)
        </span>
        encontrado(s) em ${response.responseHeader.QTime} ms
    </span>
#else
    <span>
        <span class="results-found">
            $number.format('#,##0', $page.results_found)
        </span>
        resultados encontrados em ${response.responseHeader.QTime} ms.
    </span>
    
    <div class="pagination-controls">
        #link_to_previous_page("anterior")
        Página 
        <span class="page-num">$page.current_page_number</span>
        de 
        <span class="page-count">$number.format('#,##0', $page.page_count)</span>
        #link_to_next_page("próxima")
    </div>
#end